<section class="todoapp">

  <header class="header">
		<h1><%= @listing.title %></h1>
    <%= form_for([@listing, @feature]) do |f| %>
      
      <%= f.text_field :description, :class => "new-todo", :placeholder => (@feature.errors.full_messages_for(:description).first || "Enter a new feature description") %>
      <%= f.submit :style => "display: none" %>
    <% end %>
	</header>

  <section class="main">
  <ul class="todo-list">
    <%= @listing.features.each do |feat| %>
      <li>
        <div class="view">
          <label><%= feat.description  %> </label>
        </div>
      </li>
    <% end %>

  </ul>
</section>

	<footer class="footer" style="display: block;">
	</footer>
</section>
